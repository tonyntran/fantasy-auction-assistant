{
  "manifest_version": 3,
  "name": "Fantasy Auction Assistant",
  "version": "1.0.0",
  "description": "Bridges ESPN Fantasy Auction Draft room with a local AI assistant server",

  "permissions": [
    "cookies",
    "activeTab"
  ],

  "host_permissions": [
    "https://fantasy.espn.com/*",
    "https://*.espn.com/*",
    "http://localhost:8000/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://fantasy.espn.com/football/draft*",
        "https://fantasy.espn.com/basketball/draft*",
        "https://fantasy.espn.com/baseball/draft*",
        "https://fantasy.espn.com/hockey/draft*"
      ],
      "js": ["content.js"],
      "world": "MAIN",
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://fantasy.espn.com/football/draft*",
        "https://fantasy.espn.com/basketball/draft*",
        "https://fantasy.espn.com/baseball/draft*",
        "https://fantasy.espn.com/hockey/draft*"
      ],
      "js": ["content-bridge.js"],
      "world": "ISOLATED",
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["style.css"],
      "matches": ["https://fantasy.espn.com/*"]
    }
  ]
}
