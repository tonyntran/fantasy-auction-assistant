# ============================================================
# Fantasy Auction Assistant - Environment Configuration
# ============================================================
# Copy this file to .env and fill in your values.
# Defaults match config.py unless noted otherwise.
# ============================================================

# -----------------------------------------------------------
# Core Settings
# -----------------------------------------------------------

# Platform: "sleeper" or "espn"
PLATFORM=sleeper

# Sport: "football", "basketball", or "auto" (detect from extension URL)
SPORT=football

# -----------------------------------------------------------
# AI Configuration
# -----------------------------------------------------------

# AI provider: "claude" or "gemini"
AI_PROVIDER=claude

# Anthropic API key (required if AI_PROVIDER=claude)
ANTHROPIC_API_KEY=your_key_here

# Gemini API key (required if AI_PROVIDER=gemini)
GEMINI_API_KEY=your_key_here

# Claude model name
CLAUDE_MODEL=claude-haiku-4-5-20251001

# Gemini model name
GEMINI_MODEL=gemini-2.5-flash

# AI request timeout in milliseconds
AI_TIMEOUT_MS=8000

# -----------------------------------------------------------
# Sleeper Configuration
# -----------------------------------------------------------

# Sleeper league and draft IDs (required if PLATFORM=sleeper)
SLEEPER_LEAGUE_ID=
SLEEPER_DRAFT_ID=

# -----------------------------------------------------------
# ESPN Configuration
# -----------------------------------------------------------

# ESPN authentication cookies (required if PLATFORM=espn)
ESPN_SWID=
ESPN_S2=

# -----------------------------------------------------------
# Draft Settings
# -----------------------------------------------------------

# Your team name (must match the name in your league)
MY_TEAM_NAME=My Team

# Number of teams in the league
LEAGUE_SIZE=10

# Auction budget per team
BUDGET=200

# Roster slots (comma-separated)
ROSTER_SLOTS=QB,RB,RB,WR,WR,TE,FLEX,FLEX,K,DEF

# Draft strategy: "balanced", "studs_and_steals", "rb_heavy", "wr_heavy", "elite_te"
DRAFT_STRATEGY=balanced

# -----------------------------------------------------------
# Data Paths
# -----------------------------------------------------------

# Path to player projections CSV
CSV_PATH=data/sheet_2026.csv

# Path to event log (JSONL format)
EVENT_LOG_PATH=data/event_log.jsonl

# Multi-source projections (comma-separated CSV paths; empty = use CSV_PATH only)
CSV_PATHS=
PROJECTION_WEIGHTS=

# ADP comparison CSV (empty = disabled)
ADP_CSV_PATH=

# Keeper league CSV (empty = no keepers)
# Format: PlayerName,Team,Price
KEEPERS_CSV=

# -----------------------------------------------------------
# VORP Baselines (Football)
# -----------------------------------------------------------

VORP_BASELINE_QB=11
VORP_BASELINE_RB=30
VORP_BASELINE_WR=30
VORP_BASELINE_TE=11
VORP_BASELINE_K=1
VORP_BASELINE_DEF=1

# -----------------------------------------------------------
# VORP Baselines (Basketball)
# -----------------------------------------------------------

VORP_BASELINE_PG=12
VORP_BASELINE_SG=12
VORP_BASELINE_SF=12
VORP_BASELINE_PF=12
VORP_BASELINE_C=10
